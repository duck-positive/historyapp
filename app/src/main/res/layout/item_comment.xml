<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="23dp"
    android:layout_marginStart="28dp"
    android:layout_marginEnd="101dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_comment_profile_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/history_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/item_comment_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="14sp"
        app:layout_constraintStart_toEndOf="@+id/item_comment_profile_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/nickname"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginStart="22dp"
        android:textSize="11sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/item_comment_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/item_comment_nickname_tv"
        app:layout_constraintStart_toStartOf="@id/item_comment_nickname_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>