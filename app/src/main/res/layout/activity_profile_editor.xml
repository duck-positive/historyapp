<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/profile_editor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="프로필 편집"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="21sp"/>
    <ImageView
        android:id="@+id/profile_editor_exit_iv"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:src="@drawable/left_black_arrow"
        app:layout_constraintTop_toTopOf="@+id/profile_editor_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        />
    <ImageView
        android:id="@+id/profile_editor_complete_btn_iv"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:src="@drawable/completion_btn"
        app:layout_constraintTop_toTopOf="@+id/profile_editor_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="320dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="309dp"
        android:background="@color/light_grey"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="360dp"
        android:background="@color/light_grey"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="닉네임"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="328dp"
        android:layout_marginStart="20dp"
        />
    <EditText
        android:id="@+id/profile_editor_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="315dp"
        android:layout_marginStart="101dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_editor_profile_img_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="135dp"
        android:src="@drawable/mypage_profile_img_ex1"
        />
    <TextView
        android:id="@+id/profile_editor_img_edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 사진 변경"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="241dp"
        android:textColor="@color/blue"
        />
    <TextView
        android:id="@+id/profile_editor_nickname_edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="328dp"
        android:textColor="@color/blue"
        android:textSize="14sp"
        android:layout_marginStart="350dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>