<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/western_story_new_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NEW"
        android:textSize="18sp"
        android:layout_marginStart="28dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/western_story_new_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/read_story"
        android:textSize="13sp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@id/western_story_new_tv"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/western_story_align_iv"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/ic_setting"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/western_story_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:listitem="@layout/item_story"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/western_story_new_detail_tv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>