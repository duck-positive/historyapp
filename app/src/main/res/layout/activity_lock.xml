<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/lock_screen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <ImageView
        android:id="@+id/lock_rectangle_1_iv"
        android:layout_width="410dp"
        android:layout_height="525dp"
        android:src="@drawable/lock_screen_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/lock_btn_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/lock_screen_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="53dp"
        />
    <LinearLayout
        android:id="@+id/lock_left_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="73dp"
        >

        <ImageView
            android:id="@+id/lock_left_arrow_iv"
            android:layout_width="8dp"
            android:layout_height="20dp"
            android:src="@drawable/left_arrow_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginStart="15dp"
            android:text="어플"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lock_right_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lock_left_ly"
        android:layout_marginEnd="34dp"
        >
    <TextView
        android:layout_width="23dp"
        android:layout_height="32dp"
        android:textSize="12sp"
        android:text="잠금\해체"
        android:textStyle="bold"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="-4dp"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/lock_right_arrow_iv"
        android:layout_width="13dp"
        android:layout_height="20dp"
        android:src="@drawable/right_arrow_blue"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/lock_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lock_rectangle_1_iv"
        android:layout_width="266dp"
        android:layout_height="70dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="70dp"
        android:layout_marginStart="46dp"
        android:text="제목은 어느정도\n 크기로 하면 좋을까"
        />
    <View
        android:background="@color/black"
        android:layout_width="325dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@+id/lock_title_tv"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/lock_title_tv"
        />
    <TextView
        android:id="@+id/lock_detail_tv"
        android:layout_width="325dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/lock_title_tv"
        app:layout_constraintStart_toStartOf="@+id/lock_title_tv"
        android:layout_marginTop="56dp"
        android:textColor="@color/black"
        android:text="클레오파트라 7세는 프톨레마이오스 왕조의 마지막 파라오인데, 초대 파라오인 프톨레마이오스 1세는 그리스 출신입니다. 그래서 클레오파트라가 그리스 계통의."
        />









</androidx.constraintlayout.widget.ConstraintLayout>