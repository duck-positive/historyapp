<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/signup_pwd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/put_password"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/signup_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:maxLength="9"
        android:textSize="12sp"
        android:textCursorDrawable="@drawable/text_cursor"
        android:backgroundTint="@color/primary_color"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/signup_pwd_tv"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/signup_pwd_warning_iv"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/warning"
        android:src="@drawable/ic_warning"
        android:layout_marginStart="45dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/signup_pwd_warning_tv"
        app:layout_constraintBottom_toBottomOf="@id/signup_pwd_warning_tv"/>
    <TextView
        android:id="@+id/signup_pwd_warning_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/length_password"
        android:textColor="@color/red"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="3dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/signup_pwd_warning_iv"
        app:layout_constraintTop_toBottomOf="@id/signup_pwd_et" />
    <TextView
        android:id="@+id/signup_pwd_check_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_password"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/signup_pwd_et"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/signup_pwd_check_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textCursorDrawable="@drawable/text_cursor"
        android:backgroundTint="@color/primary_color"
        android:inputType="textPassword"
        android:paddingBottom="16dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:hint="@string/confirm"
        app:layout_constraintTop_toBottomOf="@id/signup_pwd_check_tv"/>
    <ImageView
        android:id="@+id/signup_pwd_check_warning_iv"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/warning"
        android:src="@drawable/ic_warning"
        android:layout_marginStart="45dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/signup_pwd_check_warning_tv"
        app:layout_constraintBottom_toBottomOf="@id/signup_pwd_check_warning_tv"/>
    <TextView
        android:id="@+id/signup_pwd_check_warning_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diff_password"
        android:textColor="@color/red"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="3dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/signup_pwd_check_warning_iv"
        app:layout_constraintTop_toBottomOf="@id/signup_pwd_check_et" />
    <TextView
        android:id="@+id/signup_pwd_term1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_term"
        android:textColor="@color/primary_color"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/signup_pwd_confirm_btn"
        app:layout_constraintBottom_toTopOf="@id/signup_pwd_confirm_btn"/>
    <TextView
        android:id="@+id/signup_pwd_term2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/term"
        android:textColor="@color/primary_color"
        android:clickable="true"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/signup_pwd_term1_tv"
        app:layout_constraintTop_toTopOf="@id/signup_pwd_term1_tv" />
    <TextView
        android:id="@+id/signup_pwd_term3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/agree"
        android:textColor="@color/primary_color"
        app:layout_constraintStart_toEndOf="@id/signup_pwd_term2_tv"
        app:layout_constraintTop_toTopOf="@id/signup_pwd_term1_tv"/>

    <Button
        android:id="@+id/signup_pwd_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round"
        android:layout_marginHorizontal="35dp"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>