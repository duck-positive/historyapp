<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/story_exit_lo"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:id="@+id/story_exit_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/back"
            android:src="@drawable/left_arrow"
            android:background="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/story_shadow_lo"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/story_exit_lo"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/layout_shadow" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/story_exit_lo"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/story_writer_lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/story_writer_profile_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mypage_profile_img_ex1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/story_writer_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="14sp"
                app:layout_constraintStart_toEndOf="@+id/story_writer_profile_iv"
                app:layout_constraintTop_toTopOf="parent"
                android:text="닉네임"
                android:layout_marginTop="13dp"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/story_setting_iv"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:src="@drawable/ic_mypage_setting"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/story_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="24dp"
                android:maxWidth="200dp"
                android:layout_marginTop="23dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="아아아아아아아아아아아아"
                app:layout_constraintTop_toBottomOf="@id/story_writer_lo"
                app:layout_constraintStart_toStartOf="parent"/>
            <HorizontalScrollView
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginHorizontal="28dp">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/oriental_banner"/>
            </HorizontalScrollView>
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:text="어쩌구저쩌구"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/story_hashtag_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="28dp"
                android:orientation="horizontal"
                tools:listitem="@layout/item_hashtag"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="28dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_marginEnd="2dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_marginEnd="2dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_like"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="21dp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/story_user_profile_iv"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/mypage_profile_img_ex1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <EditText
                    android:id="@+id/story_comment_et"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:hint="댓글을 입력해보세요."
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="22dp"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="35dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_comment"/>
                <ImageView
                    android:id="@+id/story_like_iv"
                    android:layout_width="23dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="21dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_story_detail_like" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="23dp"
                android:background="@color/divider"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/story_comment_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_comment"/>
        </LinearLayout>




    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>