<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/story_exit_lo"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:id="@+id/story_exit_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/back"
            android:src="@drawable/left_arrow"
            android:background="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/story_shadow_lo"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/story_exit_lo"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/layout_shadow" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/story_exit_lo"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/story_writer_lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/story_writer_profile_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mypage_profile_img_ex1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/story_writer_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/story_writer_profile_iv"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/nickname"
                android:layout_marginTop="11dp"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/story_setting_lo"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:backgroundTint="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/story_setting_iv"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/story_setting_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_mypage_setting"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:backgroundTint="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/story_setting_iv"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/story_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="23dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/write"
                app:layout_constraintTop_toBottomOf="@id/story_writer_lo"
                app:layout_constraintStart_toStartOf="parent"/>
            <HorizontalScrollView
                android:id="@+id/story_image_sv"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_marginHorizontal="28dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/story_image_iv"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/oriental_banner"/>
                    <ImageView
                        android:id="@+id/story_image2_iv"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="20dp"
                        android:visibility="gone"
                        android:src="@drawable/oriental_banner"/>
                    <ImageView
                        android:id="@+id/story_image3_iv"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="20dp"
                        android:visibility="gone"
                        android:src="@drawable/oriental_banner"/>
                    <ImageView
                        android:id="@+id/story_image4_iv"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="20dp"
                        android:visibility="gone"
                        android:src="@drawable/oriental_banner"/>
                    <ImageView
                        android:id="@+id/story_image5_iv"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="20dp"
                        android:visibility="gone"
                        android:src="@drawable/oriental_banner"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/story_content_tv"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:textColor="@color/black"
                android:lineSpacingExtra="1.5dp"
                android:text="@string/story"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/story_hashtag_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="28dp"
                android:orientation="horizontal"
                tools:listitem="@layout/item_hashtag"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="28dp">
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="12dp"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_like_small"/>
                <TextView
                    android:id="@+id/story_like_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blank"
                    android:textSize="14sp"
                    android:layout_marginEnd="15dp"/>
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_comment"/>
                <TextView
                    android:id="@+id/story_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blank"
                    android:textSize="14sp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginTop="20dp"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="23dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/story_user_profile_iv"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/history_logo"/>
                <EditText
                    android:id="@+id/story_comment_et"
                    android:layout_width="213dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_comment"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:maxLength="50"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:backgroundTint="@color/primary_color"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="22dp"
                    android:paddingBottom="13dp"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:id="@+id/story_like_iv"
                    android:layout_width="23dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="37dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_story_detail_like" />
                <ImageView
                    android:id="@+id/story_like_on_iv"
                    android:layout_width="23dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="37dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/favorite" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="23dp"
                android:background="@color/divider"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/story_comment_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_comment"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>





    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>