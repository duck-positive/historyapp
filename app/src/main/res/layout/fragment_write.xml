<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/write_write_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록하기"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="68dp"
        android:layout_marginStart="29dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/write_confirm_btn"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:backgroundTint="@color/primary_color"
        android:background="@drawable/button_lessround"
        android:layout_marginEnd="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/write_write_tv"
        app:layout_constraintBottom_toBottomOf="@id/write_write_tv"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/write_title_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="29dp"
        app:layout_constraintTop_toBottomOf="@id/write_write_tv"
        app:layout_constraintStart_toStartOf="@id/write_write_tv">
        <TextView
            android:id="@+id/write_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/write_title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="29dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/write_theme_lo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/write_title_lo"
        app:layout_constraintStart_toStartOf="@id/write_write_tv">
        <TextView
            android:id="@+id/write_theme_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주제"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_marginStart="39dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한국사"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@drawable/selector_radio_button"
                android:button="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   /   "
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동양사"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@drawable/selector_radio_button"
                android:button="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   /   "
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서양사"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@drawable/selector_radio_button"
                android:button="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   /   "
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@drawable/selector_radio_button"
                android:button="@null"/>
        </RadioGroup>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/write_story_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이야기"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/write_theme_lo"
        app:layout_constraintStart_toStartOf="@id/write_write_tv"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/write_story_cv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="28dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/write_story_tv"
        app:layout_constraintStart_toStartOf="parent">
        <EditText
            android:id="@+id/write_story_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:maxWidth="20sp"
            android:maxLength="500"
            android:background="@drawable/cardview_selected"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/write_hashtag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해시태그"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/write_story_cv"
        app:layout_constraintStart_toStartOf="@id/write_story_cv"/>
    <LinearLayout
        android:id="@+id/write_hashtag_add_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/write_hashtag_tv"
        app:layout_constraintStart_toStartOf="@id/write_hashtag_tv">
        <androidx.cardview.widget.CardView
            android:id="@+id/write_hashtag_cv"
            android:layout_width="104dp"
            android:layout_height="25dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            android:background="@drawable/button_white">
            <EditText
                android:id="@+id/write_hashtag_et"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/unselected"
                android:textSize="13sp"
                android:hint="+ 해시태그 추가"
                android:nextFocusUp="@id/write_hashtag_et"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                android:background="@drawable/cardview_selected"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/write_hashtag_list_lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintTop_toBottomOf="@id/write_hashtag_add_lo"
            app:layout_constraintStart_toStartOf="@id/write_hashtag_add_lo"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/write_hashtag_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/item_hashtag"/>
    </LinearLayout>
        <TextView
            android:id="@+id/write_img_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 첨부"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="26dp"
            android:layout_marginStart="29dp"
            app:layout_constraintTop_toBottomOf="@id/write_hashtag_list_lo"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/write_img_tv"
            app:layout_constraintStart_toStartOf="@id/write_img_tv">
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="@id/write_img_tv"
                app:layout_constraintTop_toBottomOf="@id/write_img_tv">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/write_img_lo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cardview_selected">
                    <ImageButton
                        android:id="@+id/write_img_camera_ib"
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_camera"
                        android:layout_marginTop="19dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/write_img_add_tv"
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="20sp"
                        android:layout_marginBottom="13dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/write_img_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:listitem="@layout/item_img"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>