<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/write_write_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록하기"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="68dp"
        android:layout_marginStart="29dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/write_confirm_btn"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter"
        android:background="@drawable/button_confirm"
        android:layout_marginEnd="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/write_write_tv"
        app:layout_constraintBottom_toBottomOf="@id/write_write_tv"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/write_title_lo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="29dp"
        app:layout_constraintTop_toBottomOf="@id/write_write_tv"
        app:layout_constraintStart_toStartOf="@id/write_write_tv">
        <TextView
            android:id="@+id/write_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/write_title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="29dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/write_theme_lo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/write_title_lo"
        app:layout_constraintStart_toStartOf="@id/write_write_tv">
        <TextView
            android:id="@+id/write_theme_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주제"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_marginStart="39dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한국사"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@drawable/selector_radio_button"
                android:button="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   /   "
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동양사"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@drawable/selector_radio_button"
                android:button="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   /   "
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서양사"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@drawable/selector_radio_button"
                android:button="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   /   "
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@drawable/selector_radio_button"
                android:button="@null"/>
        </RadioGroup>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/write_story_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이야기"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/write_theme_lo"
        app:layout_constraintStart_toStartOf="@id/write_write_tv"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/write_story_cv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="28dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/write_story_tv"
        app:layout_constraintStart_toStartOf="parent">
        <EditText
            android:id="@+id/write_story_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_selected"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>